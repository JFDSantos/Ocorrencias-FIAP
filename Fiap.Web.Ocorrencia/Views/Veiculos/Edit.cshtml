@model Fiap.Web.Ocorrencias.Models.VeiculoModel

<h1>Veículos</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- IMPORTANTE elemento form -->
        <form asp-action="Edit" asp-controller="Veiculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- IMPORTANTE propriedade ClienteId oculto -->
            <input type="hidden" asp-for="id_veic" />

            <div class="form-group">
                <label asp-for="placa" class="control-label"></label>
                <input asp-for="placa" class="form-control" />
                <span asp-validation-for="placa" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="id_serv_emergencia" class="control-label"></label>
                <select asp-for="id_serv_emergencia" asp-items="@ViewBag.gravidade_atendida" class="form-select">
                    <option value="0">Selecione</option>
                </select>
                <span asp-validation-for="id_serv_emergencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>